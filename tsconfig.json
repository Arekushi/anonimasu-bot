{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "paths": {
            "@client/*": ["./src/client/*"],
            "@commands/*": ["./src/commands/*"],
            "@enums/*": ["./src/enums/*"],
            "@events/*": ["./src/events/*"],
            "@interfaces/*": ["./src/interfaces/*"],
            "@classes/*": ["./src/classes/*"],
            "@utils/*": ["./src/utils/*"],
            "@aspects/*": ["./src/aspects/*"],
            "@exceptions/*": ["./src/exceptions/*"]
        },
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "lib": [
        "ES2017",
        "ES6",
        "ESNext"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
