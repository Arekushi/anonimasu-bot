{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./dist",
        "declarationDir": "./dist",
        "paths": {
            "@src/*": ["./src/*"],
            "@assets/*": ["./src/assets/*"],
            "@modules/*": ["./src/modules/*"],
            "@core/*": ["./src/core/*"],
            "@bot/*": ["./src/modules/bot/*"],
            "@database/*": ["./src/modules/database/*"]
        },
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "lib": [
        "ES2017",
        "ES6",
        "ESNext"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
